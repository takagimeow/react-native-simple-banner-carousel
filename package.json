{
  "name": "react-native-simple-banner-carousel",
  "version": "1.0.0-alpha.0",
  "description": "This is the simplest carousel component made for React Native.",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib/* && yarn lint && tsc",
    "build:win": "yarn lint && tsc",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts?(x)\" && prettier --list-different \"**/*.{json,md,js,jsx,ts,tsx}\"",
    "prepare": "husky install && yarn build",
    "prettier": "prettier --write \"{docs,examples,src}/**/*.{json,md,js,jsx,ts,tsx}\""
  },
  "keywords": [
    "react-native",
    "react",
    "native",
    "carousel",
    "indicator",
    "swipe",
    "keyboard",
    "snap",
    "android",
    "ios"
  ],
  "author": "Keisuke Takagi",
  "homepage": "https://github.com/takagimeow/react-native-simple-banner-carousel#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/takagimeow/react-native-simple-banner-carousel"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "arrowParens": "avoid",
    "semi": true
  },
  "files": [
    "lib/**/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-native": "^4.0.2",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-native": "^0.65.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-native": "^3.11.0",
    "husky": "^7.0.0",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-native": "^0.65.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "react": "> 15.0.0",
    "react-native": "> 0.50.0",
    "react-native-gesture-handler": "> 1.0.0"
  },
  "dependencies": {
    "react-native-status-bar-height": "^2.6.0"
  }
}
